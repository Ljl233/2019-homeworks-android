<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_information"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4DB6AC"
        app:elevation="10dp"
        app:navigationIcon="@drawable/back_arrow"
        app:title="个人信息"
        app:titleTextColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18.2875dp"
        android:background="#1f000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="27.4286dp"
            android:layout_height="27.4286dp"
            android:layout_gravity="center"
            android:layout_marginStart="18.2875dp"
            android:src="@drawable/name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="36.5714dp"
            android:text="姓名:"
            android:textColor="#000000"
            android:textSize="18.2875sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="#000000"
            android:textSize="18.2875sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1f000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="27.4286dp"
            android:layout_height="27.4286dp"
            android:layout_gravity="center"
            android:layout_marginStart="18.2875dp"
            android:src="@drawable/student_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="36.5714dp"
            android:text="学号:"
            android:textColor="#000000"
            android:textSize="18.2875sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="#000000"
            android:textSize="18.2875sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1f000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_info_mail"
            android:layout_width="27.4286dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="18.2875dp"
            android:src="@drawable/mailbox" />

        <TextView
            android:id="@+id/tv_info_mail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="36.5714dp"
            android:layout_toEndOf="@id/iv_info_mail"
            android:gravity="center_vertical"
            android:text="邮箱:"
            android:textColor="#000000"
            android:textSize="18.2875sp" />

        <EditText
            android:id="@+id/et_mailbox"
            android:theme="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@id/iv_clearmailbox"
            android:layout_toEndOf="@id/tv_info_mail"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18.2875sp" />

        <ImageView
            android:id="@+id/iv_clearmailbox"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:src="@mipmap/close_icon" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1f000000" />

    <Button
        android:id="@+id/btn_logoff"
        android:layout_width="match_parent"
        android:layout_height="36.5714dp"
        android:layout_marginStart="36.5714dp"
        android:layout_marginTop="36.5714dp"
        android:layout_marginEnd="36.5714dp"
        android:background="@color/colorPrimary"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="18.2875sp" />

    </LinearLayout>

</LinearLayout>

