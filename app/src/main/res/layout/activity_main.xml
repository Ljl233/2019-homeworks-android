<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.LoginActivity">

    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="127.619dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="106.6667dp"
        android:layout_marginTop="45.7143dp"
        android:layout_marginEnd="106.6667dp"
        android:src="@drawable/home_page" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#ff4db6ac"
        android:textSize="22.8571sp" />

    <LinearLayout
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36.5714dp"
        android:layout_marginEnd="36.5174dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="学号"
            android:textColor="#ff000000"
            android:textSize="18.2875sp" />

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="0dp"
            android:layout_height="53.7143dp"
            android:layout_gravity="bottom"
            android:layout_weight="20"
            android:textSize="18.2875sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36.5714dp"
        android:layout_marginEnd="36.5714dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="密码"
            android:textColor="#ff000000"
            android:textSize="18.2875sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="53.7143dp"
            android:layout_gravity="bottom"
            android:layout_weight="20"
            android:inputType="textPassword"
            android:textSize="18.2875sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="36.5714dp"
        android:layout_marginStart="36.5714dp"
        android:layout_marginEnd="36.5714dp"
        android:background="@color/colormain"
        android:text="@string/login"
        android:textColor="#ffffffff"
        android:textSize="18.2875sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.2875dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="36.5714dp"
            android:text="@string/remember"
            android:textColor="#ff4db6ac" />

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="36.1905dp"
            android:clickable="true"

            android:text="@string/forget"
            android:textColor="#ff4db6ac"
            android:textSize="13.7143sp" />
    </RelativeLayout>

</LinearLayout>
