<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/course_and_task_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
        <RelativeLayout
            android:id="@+id/rl_nav_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nav_background"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/nav_background"/>
            <TextView
                android:id="@+id/tv_nav_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="张全蛋"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:layout_marginTop="90dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018233333"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_below="@id/tv_nav_name"
                android:textColor="@color/colorPrimary"/>
            
            <LinearLayout
                android:id="@+id/ll_information"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/nav_background"
                android:orientation="horizontal">
                
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/nav_information"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:layout_marginLeft="30dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C0C0C0"
                android:layout_below="@id/ll_information"/>

            <LinearLayout
                android:id="@+id/ll_remind"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/ll_information"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/nav_remind"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息提醒"
                    android:layout_marginLeft="30dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C0C0C0"
                android:layout_below="@id/ll_remind"/>

            <LinearLayout
                android:id="@+id/ll_assignment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/ll_remind"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/nav_assignment"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的任务"
                    android:layout_marginLeft="30dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C0C0C0"
                android:layout_below="@id/ll_assignment"/>

            <LinearLayout
                android:id="@+id/ll_notice"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/ll_assignment"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/nav_notice"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的通知"
                    android:layout_marginLeft="30dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C0C0C0"
                android:layout_below="@id/ll_notice"/>

            <LinearLayout
                android:id="@+id/ll_friends"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/ll_notice"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/nav_friends"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好友管理"
                    android:layout_marginLeft="30dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C0C0C0"
                android:layout_below="@id/ll_friends"/>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:src="@drawable/nav_pic"
                android:layout_below="@id/ll_friends"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

        </RelativeLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>