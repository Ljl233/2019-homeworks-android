<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@mipmap/back_arrow"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="18.28dp"
            android:layout_marginTop="18.28dp"
            android:layout_marginEnd="18.28dp"
            android:background="@drawable/boder"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_assignName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#3F51B5"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18.2875sp" />

            <TextView
                android:id="@+id/tv_begin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="18.28dp"
                android:text="开始时间："
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ddl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="9.1429dp"
                android:text="截止时间："
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="27.4286dp"
                android:text="作业状态："
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="9.1429dp"
                android:text="作业要求："
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="9.1429dp"
                android:layout_marginEnd="18.2875dp"
                android:lineSpacingExtra="9.1429dp"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_pointNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="27.4286dp"
                android:text="已批阅："
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_studentNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="9.1429dp"
                android:text="学生数："
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_submitContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="27.4286dp"
                android:text="作业内容："
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="9.1429dp"
                android:text="作业反馈："
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_submitAttachmentNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="9.1429dp"
                android:text="作业附件："
                android:textColor="#000000"
                android:textSize="16sp" />


            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.28dp"
                android:layout_marginTop="9.1429dp"
                android:scrollbars="none"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
