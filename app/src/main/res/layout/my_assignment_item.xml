<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tasks_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_ffffff"
    android:orientation="vertical"
    android:paddingTop="18dp">

    <LinearLayout
        android:id="@+id/ll_myassign_item_in"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="3"
        android:background="@drawable/rounded_rectangle_039be5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_myassign_promotion"
            android:layout_width="26.88dp"
            android:layout_height="26.88dp"
            android:src="@drawable/promotion" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp">

            <LinearLayout
                android:layout_width="77.4dp"
                android:layout_height="27.3dp"
                android:background="@drawable/oval"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_myassign_stutas"
                    android:layout_width="11.38dp"
                    android:layout_height="11.38dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7.9dp"
                    android:layout_marginBottom="7.9dp" />

                <TextView
                    android:id="@+id/tv_myassign_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="9dp"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="26.88dp"
                android:layout_height="26.88dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/pull_down"
                android:clickable="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_myassign_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="28dp"
            android:text="我是个栗子。。。"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="9dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间："
                android:textColor="#039BE5"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_myassign_begintime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#039BE5"
                android:textSize="13sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止时间："
                android:textColor="#039BE5"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_myassign_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#039BE5"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
